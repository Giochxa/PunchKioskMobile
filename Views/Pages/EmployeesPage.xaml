<!-- Views/Pages/EmployeesPage.xaml -->
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             x:Class="PunchKioskMobile.Views.Pages.EmployeesPage"
             Title="Employees">
    <CollectionView ItemsSource="{Binding Employees}">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Grid Padding="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Image Source="{Binding PhotoUrl}" WidthRequest="48" HeightRequest="48"/>
                    <VerticalStackLayout Grid.Column="1" Spacing="2">
                        <Label Text="{Binding FullName}" FontAttributes="Bold"/>
                        <Label Text="{Binding Position}" FontSize="12"/>
                        <Label Text="{Binding EmployeeCode}" FontSize="12"/>
                    </VerticalStackLayout>
                </Grid>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>
