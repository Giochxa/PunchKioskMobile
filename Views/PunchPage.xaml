<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PunchKioskMobile.Views.PunchPage"
             Title="Punch Kiosk">

    <VerticalStackLayout Padding="20" Spacing="15">
        <Label Text="Employee Punch" FontSize="24" HorizontalOptions="Center" />
        <Entry Text="{Binding EnteredId}" Placeholder="Employee ID" Keyboard="Numeric"/>
        <Button Text="Capture Photo" Command="{Binding CapturePhotoCommand}" />
        <Button Text="Punch In/Out" Command="{Binding PunchCommand}" />
    </VerticalStackLayout>
</ContentPage>
